@require "app/styles/charte"

span
	font-weight: 600

#app-home
	margin-top: 70px

#app-home-date
	text-align: center
	margin-bottom: 30px

.title
	text-align: center
	font-weight: 500
	margin-bottom: 30px

	&-detail
		text-align: center
		font-size: 1.5em
		margin-bottom: 30px

.tool-info
	position: absolute
	top: 20px
	left: 20px

.tool-info:hover
	text-decoration: none

.chart-container
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	margin-bottom: 5em

	&-text
		background-color: $background-color-grey
		display: flex
		flex-direction: column
		justify-content: space-around
		padding: 2.5em

	&-chart
		position: relative

.content
	padding: 25px
	display: flex
	flex-direction: column
	justify-content: space-around

	&-title
		font-size: 1.5em
		font-weight: 500
		text-align: center

.order-left
	order:1

.order-right
	order:2

hr
	width: 50%
	border: 1px solid $grey
	margin-bottom: 5em

@media (max-width: 992px)

	.chart-container-text
		margin-top: 2em

	.content-text
		margin-top: 0.7em

	.title
		margin: 75px 0 50px 0

	.order-left
		order:2

	.order-right
		order:1
