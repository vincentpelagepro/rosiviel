@require "app/styles/charte"

.blue-background
	background-image: $side-blue-background-sm

.white-background
	background-image: $side-white-background-sm

.yellow-background
	background-image: $side-yellow-background-sm

.orange-background
	background-image: $side-orange-background-sm

.red-background
	background-image: $side-red-background-sm

.white-text
	color: $white

.black-text
	color: $black

#sidebar
	padding: 0
	position: fixed
	top: 51px
	z-index: 1

#sidebar ul
	margin-bottom: 0
	padding-left: 0
	display: flex
	flex-direction: row

#sidebar a
	flex: 1 1 auto
	width: 30%
	list-style: none
	text-align: center
	justify-content: center
	display: flex
	flex-direction: column
	border-bottom: 1px solid $grey-tranparent
	color: inherit
	text-decoration: none
	font-weight: 300

#sidebar a:hover
	opacity: 0.5

.active-link
	opacity: 0.5

#sidebar a:not(:last-child)
	border-right: 1px solid $background-color-dark-grey

#sidebar a li
	font-size: 18px

@media (min-width: 992px)

	.blue-background
		background-image: $side-blue-background

	.white-background
		background-image: $side-white-background

	.yellow-background
		background-image: $side-yellow-background

	.orange-background
		background-image: $side-orange-background

	.red-background
		background-image: $side-red-background

	#sidebar
		bottom: 0

	#sidebar a
		 height: 20%
		 width: auto

	#sidebar ul
		height: calc(100vh - 52.4px)
		flex-direction: column

	#sidebar a:last-child
		border-right: 1px solid $background-color-dark-grey
		border-bottom: none

	#sidebar li a
		width: 65%
		 margin: auto


	.active-link:after
		content: ""
		position: absolute
		left: 102%
		height: 18%
		width: 3px
		background: $black

@media (min-width: 1680px)

	#sidebar li a
		width: 55%

@media (max-width: 992px)
	#sidebar
		overflow-x: scroll

	#sidebar ul
		width: 167%
		min-height: 70px

	#sidebar::-webkit-scrollbar-track
		-webkit-box-shadow: inset 0 0 6px $grey-tranparent-light
		background-color: $background-color-grey

	#sidebar::-webkit-scrollbar
		width: 40px
		height: 10px
		background-color: $background-color-grey

	#sidebar::-webkit-scrollbar-thumb
		border-radius: 5px
		background-color: $background-color-dark-grey
