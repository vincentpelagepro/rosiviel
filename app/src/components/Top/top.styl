@require "app/styles/charte"

.top-button
	background-color: Transparent
	padding: 0.5em
	border-radius: 10px
	border: solid 2px
	margin-top: 2em

.blue-border
	border-color: $campaigns-color

.red-border
	border-color: $adgroups-color

.orange-border
	border-color: $keywords-color

.white-border
	border-color: $ads-color

#app-top
	margin-top: 120px

#data-content-date
	margin: 30px 0 30px 0
	text-align: center
	font-size: 1.3em

@media (min-width: 992px)
	#top-loader
		margin-left: 17%

	#app-top
		margin-top: 52.4px
		padding-bottom: 30px
		height: 87vh
